<h1>Sign up!</h1>
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= label :topics, "Choose topics that look interesting: " %><br />
    <% @topics = Topic.find(:all, :order => "name") %>
    <%= collection_select(:topics, :id, @topics, :id, :name, options ={:prompt => "-Select a payment"}, :multiple =>true, :size => 5) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>
