<%= form_for @micropost, :remote => true do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <div id="chars_remaining">140 characters remaining in your message!</div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
