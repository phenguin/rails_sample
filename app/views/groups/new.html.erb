<h1>Create a new group!</h1>

<%= form_for(@group) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= label :topics, "What topics are relevant to your group?" %><br />
    <% @topics = Topic.find(:all, :order => "name") %>
    <%= collection_select(:topics, :id, @topics, :id, :name, options ={:prompt => "-Select a payment"}, :multiple =>true, :size => 5) %>
  </div>

  <div class="actions">
    <%= f.submit "Make group!" %>
  </div>

<% end %>

<%= render :partial => 'users/left_bar' %>
<%= render :partial => 'users/right_bar' %>
