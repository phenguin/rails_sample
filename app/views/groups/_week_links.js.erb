$( function () {
  var n = 1;
  <% @weeks.each do |week| %>
    n = <%= week.week_number %>;

$("ul.week a.week"+n).bind("click", function () {

  <% @week = week %>
  <% @posts = week.posts %>
  $("section div.header h3 b").html("<%= escape_javascript("Week #{@week.week_number}") %>");
  var post_display = $("<%= escape_javascript(render('weeks/post_display')) %>");
  $("td div#post_display").html(post_display);
  $("a.week#week"+<%= @week.week_number %>).css("background-color","green");

});
  <% end %>

});
